{
  "name": "ledger",
  "version": "0.0.1",
  "description": "Text-based double-entry bookkeeping",
  "type": "module",
  "main": "main.ts",
  "scripts": {
    "main": "tsx main.ts",
    "lint": "eslint .",
    "pre-commit": "concurrently --timings --group npm:lint npm:prettier-check npm:test npm:typecheck",
    "prettier-check": "prettier --check '**/*.ts'",
    "prettier-format": "prettier --write '**/*.ts'",
    "test": "npm run test! -- $(find lib -name '*.test.ts')",
    "test!": "tsx --enable-source-maps --test --test-reporter=spec",
    "test-watch": "npm run test-watch! -- $(find lib -name '*.test.ts')",
    "test-watch!": "npm run test! -- --watch",
    "typecheck": "tsc --noEmit"
  },
  "bin": {
    "ledger": "main.ts"
  },
  "author": "Luca Emanuele Mattiello <lucae.mattiello@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": ">=16.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.7.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.48.0"
  },
  "dependencies": {
    "cmd-ts": "^0.14.1",
    "exactnumber": "^2.0.1",
    "fp-ts": "^2.16.10",
    "immutable": "^5.1.1",
    "typescript-parsec": "^0.3.4"
  }
}
